# Existing YoLink Configuration
YOLINK_UAID=your_uaid
YOLINK_SECRET_KEY=your_secret_key
MONITOR_API_KEY=your_api_key

# YoLink Dashboard Configuration
API_KEY=${YOLINK_SECRET_KEY}
FRONT_URL=http://localhost:3000
SCAN_INTERVAL=60000
EMERGENCY_TIME=3000
DISABLE_TLS_CHECK=true

# WebSocket Proxy Configuration
DASHBOARD_URL=http://websocket-proxy:3000

# Email Notifications
EMAIL_ON_ALARM=false
EMAIL_TO=alert@industrialcamera.com
SMTP_HOST=smtp.industrialcamera.com
SMTP_PORT=587
SMTP_USER=smtpuser
SMTP_PASS=smtppassword

# RTSP Streamer Configuration
DASHBOARD_PORT=3000
RTSP_PORT=8554
RTSP_API_PORT=3001
ONVIF_PORT=8555
STREAM_NAME=yolink-dashboard
FRAME_RATE=1
WIDTH=1920
HEIGHT=1080
CYCLE_INTERVAL=10000
ENABLE_ONVIF=true

# Set this to your server's IP address for proper RTSP/ONVIF accessibility
# Leave as "auto" to auto-detect (works in most cases)
SERVER_IP=auto

# Time Zone
TZ=America/Denver